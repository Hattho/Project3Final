


@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
    <link rel="stylesheet" href="~/css/addInfo.css?v=<%= DateTime.Now.Ticks %" />

<h1 class="title">@ViewData["Title"]</h1>

<div style="text-align:center">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="labels">
                <div class="column">
                    <div >
                        <label asp-for="Input.Username" ></label>
                        <input class="boxes" asp-for="Input.Username"  />
                        <span asp-validation-for="Input.Username" ></span> 
                    </div>
                    <div >
                        <label asp-for="Input.Email" class="col-sm-2 col-form-label"></label>
                        <input class="boxes" asp-for="Input.Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                    </div>
                    <div >
                        <label asp-for="Input.FirstName" ></label>
      
                            <input class="boxes" asp-for="Input.FirstName"  />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                      
                    </div>
                    <div class="form-group row">
                        <label asp-for="Input.LastName" class="col-sm-2 col-form-label"></label>
          
                            <input class="boxes" asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
           
                    </div>
                    <div >
                        <label asp-for="Input.PhoneNo" class="col-sm-2 col-form-label"></label>
           
                            <input class="boxes" asp-for="Input.PhoneNo" class="form-control" />
                            <span asp-validation-for="Input.PhoneNo" class="text-danger"></span>
                    </div>
                    <div >
                        <label asp-for="Input.Role" class="col-sm-2 col-form-label"></label>
   
                            <input class="boxes" asp-for="Input.Role" class="form-control" />
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
          
                    </div>

                    <div class="form-group row">
                        <label asp-for="Input.Password" class="col-sm-2 col-form-label"></label>
        
                            <input class="boxes" asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                       
                    </div>

                    <div class="form-group row">
                        <label asp-for="Input.ConfirmPassword" class="col-sm-2 col-form-label"></label>
                      
                            <input class="boxes" asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    
                    </div>

                </div>


            </div>
            <br />

            <button type="submit" class="buttons" onclick="return confirm('Registered Succesfully!')">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            });
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}

