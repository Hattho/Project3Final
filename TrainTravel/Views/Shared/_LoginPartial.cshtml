@using Microsoft.AspNetCore.Identity
@using TrainTravel.ViewModels
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <link rel="stylesheet" href="~/css/loginPartial.css?v=<%= DateTime.Now.Ticks %" />

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
        <div style="text-align: right">
           
            <div>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="buttons">Logout</button>
                </form>
            </div>
        </div>
        }
        else
        {
    <div style="text-align: right">
        <a class="buttons" asp-area="Identity" asp-page="/Account/Register">Register</a>

        <a class="buttons" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>

        }
    </ul>
