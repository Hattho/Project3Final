@using Microsoft.AspNetCore.Identity
@using TrainTravel.ViewModels
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrainTravel</title>
    <link rel="stylesheet" href="~/css/menuu.css?v=<%= DateTime.Now.Ticks %" />
</head>
<body>
    <header>

        <div class="menu">

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <a style="color: white" asp-area="" asp-controller="Admins" asp-action="TrainRoutes">Train Routes</a>
                <a style="color: white" asp-area="" asp-controller="Admins" asp-action="AddTrainRoute">Add Train Route</a>
                <a style="color: white" asp-area="" asp-controller="Admins" asp-action="TrainTypes">Train Types</a>
                <a style="color: white" asp-area="" asp-controller="Admins" asp-action="AddTrainType">Add Train Type</a>
                <a style="color: white" asp-area="" asp-controller="Admins" asp-action="SearchRouteAdmin">Search</a>
                <a style="color: white" asp-area="" asp-controller="Admins" asp-action="Index">Admin Home</a>

            }
            else if (SignInManager.IsSignedIn(User) && User.IsInRole("Client"))
            {
                <a style="color: white" asp-area="" asp-controller="Clients" asp-action="EditAccount">Edit Account</a>
                <a style="color: white" asp-area="" asp-controller="Clients" asp-action="Reservations">Reservations</a>
                <a style="color: white" asp-area="" asp-controller="Clients" asp-action="SearchRoute">Search </a>
                <a style="color: white" asp-area="" asp-controller="Clients" asp-action="Index">Client Home</a>

            }
            else
            {
                <a style="color: white" asp-area="" asp-controller="Home" asp-action="Index">TrainTravel</a>
            }

        </div>

        <div>
            <partial name="_LoginPartial" />
        </div>


    </header>

    <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>










